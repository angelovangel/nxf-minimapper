{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/angelovangel/nxf-minimapper//nextflow_schema.json",
  "title": "angelovangel/nxf-minimapper pipeline parameters",
  "description": "Map long reads to reference",
  "type": "object",
  "$defs": {
    "input_output_options": {
      "title": "Input/output options",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Define where the pipeline should find input data and save output data.",
      "required": ["ref", "format", "fastq"],
      "properties": {
        "ref": {
          "type": "string",
          "default": "reference.fasta",
          "fa_icon": "fas fa-redo",
          "format": "file-path",
          "description": "File with reference sequence to align to"
        },
        "format": {
          "type": "string",
          "default": "fasta",
          "fa_icon": "fas fa-info",
          "enum": ["fasta", "genbank", "embl", "snapgene"],
          "description": "Sequence format of the reference"
        },
        "fastq": {
          "type": "string",
          "default": "reads.fastq",
          "fa_icon": "fas fa-copy",
          "format": "path",
          "description": "Path to fastq file or a directory with fastq files"
        },
        "outdir": {
          "type": "string",
          "format": "directory-path",
          "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
          "fa_icon": "fas fa-folder-open",
          "default": "output"
        }
      }
    },
    "advanced_options": {
      "title": "Advanced options",
      "type": "object",
      "description": "Additional options",
      "default": "",
      "properties": {
        "minimap_args": {
          "type": "string",
          "description": "Additional arguments passed to minimap2"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/$defs/input_output_options"
    },
    {
      "$ref": "#/$defs/advanced_options"
    }
  ]
}
