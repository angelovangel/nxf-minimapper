manifest {
    name            = "angelovangel/nxf-minimapper"
    author          = "aangeloo@gmail.com"
    homePage        = "https://github.com/angelovangel/nxf-minimapper"
    defaultBranch   = "main"
    description     = "Map long reads to reference"
    mainScript      = "main.nf"
    nextflowVersion = ">=23.04.2"
    version         = "v0.1.0"
}

params {
    fastq = "reads.fastq"
    ref = "reference.fasta"
    format = "fasta"
    outdir = "output"
    minimap_args = null
    help = ""
}

//process.container = "aangeloo/nxf-tgs:latest"
docker.enabled = true